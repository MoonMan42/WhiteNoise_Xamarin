<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhiteNoise_Xamarin.MainPage"
             BackgroundColor="Black">



    <StackLayout>
        <Label Text="White Noise"
               HorizontalOptions="Center"
               FontSize="Header"
               TextColor="LightGray"
               FontAttributes="Bold"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Text="Play"
                    Grid.Column="0"
                    TextColor="LightGray"
                    BackgroundColor="Transparent"
                    BorderColor="LightGray"
                    BorderWidth="1"
                    Clicked="StartPlay_Click" />
            <Button Text="Stop"
                    Grid.Column="1"
                    TextColor="LightGray"
                    BackgroundColor="Transparent"
                    BorderColor="LightGray"
                    BorderWidth="1"
                    Clicked="StopPlay_Click" />
        </Grid>
        
        
    </StackLayout>

    
</ContentPage>
